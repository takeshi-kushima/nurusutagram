<%= form_with(model: @blog, local: true, url: choose_new_or_edit) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります！</h2>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_area :content, id: :blog_content, :maxlength=>"140" %>
  </div>
  
  <div class="image">
   <%= form.label :image %>
   <%= form.file_field :image, id: :blog_image %>
   <%= form.hidden_field :image_cache %>
  </div>

<br>
  <div class="actions">
   <button type='submit' name='action' value='send' class="btn btn-primary">ぬるっとする</button>
  </div>
<% end %>